/* pages/order/order.wxss */ 
page{
  width: 100%;
  min-height:100%;
  background: #fff;
}
/* 导航栏 */
.movie-container{
  display: flex;
  flex-direction: column;
  height: 1000rpx;
  width: 100%;
  margin-bottom: 50rpx;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #494949;
}
.movie-content-wrapper{
  padding-top: 50px;
  height: 100%;
  width: 100%;
}
swiper{
  height: 100%;
  width: 100%;
}
.items_div{
  border:0px solid;
  border-radius: 20rpx;
  padding:10rpx;
  background: #DFDFDF;
  width: 95%;
  height: 150rpx;
  margin:1%;
}
.items_div view{
  position: relative;
  left: 60rpx;
  font-size: 28rpx;
}
button{
  position: absolute;
  background: #E6F3F9;
  border: 1px solid #000000;
  border-radius: 10rpx;
  font-size: 28rpx;
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  right: 50rpx;
  top: 120rpx;
}
.table {
  margin-top:3%;
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    font-size: 25rpx;
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #000000;
  color: #fff;
  display: flex;
  height: 2rem;
  text-size-adjust: 2px;
  align-items: center;
}
.bottom{
    position: absolute;
    bottom: 20rpx;
    left: 34%;
    font-size: 21rpx;
    color:grey;
}