page{
  width: 100vw;
  min-height:100%;
}
.top{
  background: #CCCCCC;
  width: 100%;
  height: 450rpx;
}
.middle{
  width: 90%;
  margin-left:5%;
  position: relative;
  top: -100rpx;
  background: #ffffff;
  border: 0px solid #f0f0f0;
  border-radius: 15px;
}
.contact_top{
  width: 100%;
  height: 100rpx;
  margin-top:5%;
  font-size: 15px;
  background: #000000;
  color: #f0f0f0;
  display: flex;
  justify-content: center; 
  align-items: center;
}
.biankuan{
  width: 100%;
  height: 150rpx;
  padding: 3rpx;
  display: flex;
  justify-content: center; 
  align-items: center;
  font-size:13px;
}
