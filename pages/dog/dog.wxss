  border-color: #CCCCCC;
  width: 400rpx;
  padding-left:2%; 
}
.radio-group{
  margin-left:35%;
}

.picker{
  position: relative;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  font-size: 12px;
  width: 400rpx;
  height: 25rpx;
  border-bottom: 1px;
  border-top: 0px;
  border-right: 0px;
  border-left: 0px;
  border-style: solid;
  border-color: #CCCCCC;
}
.comfirm{
  font-size: 25rpx;
  display: flex;
  justify-content: center; 
  align-items: center;
}
.bottom{
    position: absolute;
    bottom: 20rpx;
    left: 40%;
    font-size: 8px;
    color:grey;
}
button{
  background:#000000 ;
  margin-top:5%;
  margin-bottom: 15%;
  display: flex;
  justify-content: center; 
  align-items: center;
  width: 500rpx;
  height: 80rpx;
  font-size: 15px;
  color: #ffffff;
}
