/* pages/bathing/bathing.wxss */
page{
  width: 100vw;
  min-height:100%;
  font-size:13px;
}
.contact_top{
  width: 100%;
  height: 100rpx;
  font-size: 15px;
  background: #000000;
  color: #f0f0f0;
  display: flex;
  justify-content: center; 
  align-items: center;
}
.top{
  background: #CCCCCC;
  width: 100%;
  height: 450rpx;
}

/* 主页 */
.middle{
  padding:15rpx;
  width: 90%;
  margin-left:5%;
  margin-right:5%;
  position: relative;
  top: -20rpx;
  background: #ffffff;
  border: 0px solid #f0f0f0;
  border-radius: 15px;
}
.biankuan{
  display: flex;
  flex-direction: column;
  width: 95%;
  padding: 2% 0% 2% 3%;
  border-top: 3rpx;
  border-bottom: 0rpx;
  border-left: 0rpx;
  border-right: 0rpx;
  border-style: solid;
  border-color: #000000;
  justify-content: center; 
  font-size:15px;
}
.biankuan image{
  width: 90rpx;
  height: 60rpx;
}
.biankuan input{
  margin-top:15rpx;
  border-bottom: 1px;
  border-top: 0px;
  border-right: 0px;
  border-left: 0px;
  border-style: solid;
  border-color: #CCCCCC;
  width:320rpx;
  margin-left:5%;
  height: 40rpx;
  padding-left:2%;
}
.title{
  margin-left:5%;
}
.location{
  position: absolute;
  right: 50rpx;
  font-size: 28rpx;
}
#picker{
  margin-left:23rpx;
}
.picker{
  width:320rpx;
  height: 40rpx;
  border-bottom: 1px;
  border-top: 0px;
  border-right: 0px;
  border-left: 0px;
  border-style: solid;
  border-color: #CCCCCC;
}
button{
  background:#000000 ;
  margin-top:5%;
  margin-bottom: 15%;
  display: flex;
  justify-content: center; 
  align-items: center;
  width: 500rpx;
  height: 80rpx;
  font-size: 15px;
  color: #ffffff;
}
.price{
  position: relative;
  margin-top:5%;
}
.dog2{
  margin-left:10%;
}
.layout_horizontal image{
  height: 80rpx;
  width: 80rpx;
}
.nick{
  text-align: center;
  font-size: 27rpx;
  position: relative;
  left: -12%;
  margin-top:80rpx;
}
.layout_vertical image{
  height: 150rpx;
  width: 80rpx;
}
.layout_vertical text{
  padding-left:33%;
  font-size:15px;
}
.bathing_xiala{
  position: absolute;
  margin-left:52%;
}